---
import NavLink from './NavLink.astro';
import Theme from './Theme.tsx';
const { current = '' } = Astro.props;
---

<header class='flex max-w-screen-2xl px-2 py-3 sm:p-3 w-full'>
  <nav class='w-full flex justify-between'>
    <div class='flex items-baseline self-start'>
      <NavLink path='home' current={current} />
      <NavLink path='posts' current={current} />
    </div>
    <Theme client:load />
  </nav>
</header>
