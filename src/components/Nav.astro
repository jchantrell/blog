---
const { current = "" } = Astro.props;
---

<nav class="w-full grid grid-cols-2 uppercase font-bold font-sans">
  <div class="justify-self-start flex items-center">
    <a
      href="/"
      class="pl-5 group text-white transition duration-300 min-w-16 text-center items-center no-underline relative"
    >
      home
      <span
        class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-[color:var(--primary-color)]"
      ></span>
    </a>
    <a
      href="/blog"
      class="pl-5 group text-white transition duration-300 min-w-16 text-center items-center no-underline relative"
    >
    blog
      <span
        class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-[color:var(--primary-color)]"
      ></span>
    </a>
  </div>

  <div class="justify-self-end">
    <a href="https://github.com/jchantrell" target="_blank">
      <img
        height="30px"
        width="30px"
        src="/assets/github-icon.svg"
        alt="Github icon"
      />
    </a>
  </div>
</nav>
