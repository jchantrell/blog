---
import BaseLayout from '../layouts/BaseLayout.astro';
import GlobeLazy from '../components/GlobeLazy.jsx';

const title = 'Home';
const description = 'Ramblings about software.';
const permalink = Astro.site?.href as string;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class='relative flex items-center size-full'>
    <div id='globe' class='absolute h-full w-full inset-center'>
      <GlobeLazy transition:persist client:only='solidjs' />
    </div>
    <div class='container text-center z-0 pointer-events-none'>
      <p>Hi, I'm Joel.</p>
      <p>
        I'm a tinkerer that loves to build systems. I work professionally in software engineering and do a lot of
        recreational programming in my spare time. I use this website to document my thoughts, learnings and what I'm
        working on.
      </p>
      <p>If you would like to contact me, you can use the links below:</p>
      <p>
        <a class='pointer-events-auto' href='https://github.com/jchantrell' target='_blank'>Github</a> · <a
          class='pointer-events-auto'
          href='https://www.linkedin.com/in/jchantrell/'
          target='_blank'>LinkedIn</a
        > · <a class='pointer-events-auto' href='mailto:me@jchantrell.dev' target='_blank'>Mail</a>
      </p>
    </div>
  </div>
</BaseLayout>
