---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
  title: string;
  description: string;
  permalink: string;
}
const { title, description, permalink } = Astro.props;
---

<html lang="en" class="h-full scroll-smooth print:h-auto">
  <head>
    <BaseHead title={`jchantrell | ${title}`} description={description} permalink={permalink} />
  </head>
  <body class="min-h-dvh h-full flex flex-col print:h-auto">
    <Header />
    <main class="flex-1 py-4 px-8 relative overflow-auto print:overflow-visible">
      <div
        id="scroll-sentinel"
        class="absolute top-0 left-0 w-full h-px pointer-events-none opacity-0"
        aria-hidden="true"
      ></div>
      <slot />
    </main>
    <Footer />
  </body>
</html>
